@model ExpenseTrackerWeb.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link href="https://fonts.cdnfonts.com/css/circe-rounded" rel="stylesheet">
    <link href="~/css/landingpheader.css" rel="stylesheet" />
    <link href="~/css/landingsidebar.css" rel="stylesheet" />
    <link href="~/css/register.css" rel="stylesheet" />
</head>

<body>
    <header class="header-container">
        <div class="hamburger" id="hamburger">
            <img src="/images/sidebarImg/charm_menu-hamburger.svg" alt="" class="burger">
        </div>
        <div class="logo">
            <img src="images/logo/Logo.svg" alt="">
        </div>
        <div class="expense-tracker">
            <a href="#">ExpenseTracker</a>
        </div>
        <div class="landing-tags">
            <a href="@Url.Action("ExpenseTracker", "Home")">Home</a>
        </div>
        <div class="landing-tags">
            <a href="#">Why ExpenseTracker?</a>
        </div>
        <div class="landing-tags">
            <a href="#">Our Team</a>
        </div>

        <form method="get" asp-controller="Account" asp-action="Login">
        <div>
            <button class="register-btn">
                Login
            </button>
        </div>
        </form>
    </header>
    <div class="overlay" id="overlay"></div>

    <nav class="sidebar" id="sidebar">
        <div class="logo-sidebar">
            <img src="images/logo/Logo.svg" alt="">
            <p>ExpenseTracker</p>
        </div>
        <div class="home">
            <a href="@Url.Action("ExpenseTracker", "Home")">Home</a>
        </div>
        <div class="why-expense">
            <a href="#">Why ExpenseTracker?</a>
        </div>
        <div class="our-team">
            <a href="#">Our Team</a>
        </div>
        <div class="close-btn">
            <a href="javascript:void(0)" class="closebtn" id="close-btn">&times;</a>
        </div>
    </nav>

    <div class="login-container">
        <form asp-action="SignUp">
            <div class="title">
                <p>Sign Up</p>
            </div>
            <div>
                <input asp-for="Email" type="text" class="email" placeholder="Email" required>
            </div>
            <div>
                <input asp-for="Username" type="text" class="username" placeholder="Username" required>
            </div>
            <div class="pass-input">
                <input asp-for="Password" type="password" class="password" id="password" placeholder="Password" required>
                <span class="toggle-password" onclick="togglePasswordVisibility()">
                    <img class="img-eye" src="/images/loginImg/openEye.svg" alt="Show/Hide" id="eye-icon">
                </span>
            </div>
            <div class="pass-input">
                <input asp-for="ConfirmPassword" type="password" class="password" id="confirm-password" placeholder="Confirm Password" required>
                <span class="toggle-password" onclick="toggleConfirmPasswordVisibility()">
                    <img class="img-eye" src="/images/loginImg/openEye.svg" alt="Show/Hide" id="eyeconfirm-icon">
                </span>
            </div>

            <input type="hidden" asp-for="Code" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="DateModified" />

            <div>
                <input type="checkbox" asp-for="Agree" required>
                <label>I agree with Terms and Conditions</label>
            </div>
            <div class="login-register">
                <button type="submit" value="Create" class="reg-btn">
                    Register
                </button>
            </div>
            <div class="already-acc">
                <p>Already have an account?</p>
                <a href="@Url.Action("Login", "Account")">Login</a>
            </div>
        </form>
    </div>
    <script src="~/js/sidebar.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>